<% if current_user -%>
  <% if current_controller.eql?('home') %>
    <%= tabnav :home %>
  <% elsif current_controller.eql?('predictions') -%>
    <div class="progress">
      <div class="progresslabel">Completed:</div> <%= progressbar @progress %>
    </div>
    <%= tabnav :predictions %>
  <% elsif current_controller.eql?('contests') -%>
    <% if ['index', 'new', 'create'].include?(current_action) -%>
      <% if before_contest_participation_ends -%>
        <%= render :partial => 'contests/create_new_contest_link' -%>
      <% end %>
      <%= tabnav :contests %>
     <% else -%>
       <%= tabnav :contest %>
     <% end -%>
  <% elsif current_controller.eql?('invitations') -%>
    <% if ['pending', 'accepted'].include?(current_action) -%>
      <%= tabnav :invitations %>
     <% else -%>
       <%= tabnav :contest %>
     <% end -%>
  <% elsif ['participants', 'score_tables'].include?(current_controller) -%>
    <%= tabnav :contest %>
  <% end -%>
<% end -%>
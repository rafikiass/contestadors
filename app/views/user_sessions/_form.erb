<h4>Sign in with your Contestadors user</h4>
<div id="top_right_login">  
  <% form_for @user_session, :url => user_sessions_path do |f| %>
    <table>
      <tbody>
        <tr>
          <td><%= f.text_field :email, :value => "your@email.com" %></td>
          <td><%= f.password_field :password, :value => "password" %></td>
          <td><%= f.submit "Sign in" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "Forgot your password?", new_password_reset_path -%></td>
          <td></td>
        </tr>
      </tbody>
    </table>
 <% end -%>
</div>
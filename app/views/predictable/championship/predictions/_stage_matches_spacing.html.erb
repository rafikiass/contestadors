<%#
# Partial for adding space between the matches of different stages
%>
<% unless stage.description.eql?("Round of 16") -%>
  <%= render :partial => p_pref('match_spacer') %>
<% end -%>
<% if stage.description.eql?("Semi finals") -%>
  <%= render :partial => p_pref('match_spacer'), :locals => {:type => "1", :spaces => 2} %>
<% elsif stage.description.eql?("Final") -%>
  <%= render :partial => p_pref('match_spacer'), :locals => {:type => "2", :spaces => 1} %>
<% end -%>

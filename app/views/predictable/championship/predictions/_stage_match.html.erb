<div class="knockout_stage_match_container">
  <div class="match_date"><%= match.play_date.to_s(:short) %></div>
  <% if predicted == true -%>
    <div class="predicted_knockout_stage_match">
      <div class="predicted_knockout_stage_team">
        <div class="team_icon">
          <%= image_tag("/images/flags/"+ match.home_team.country_flag+ ".png") %>
        </div><%= match.home_team.name %>
      </div>
      <div class="predicted_knockout_stage_team">
        <div class="team_icon">
          <%= image_tag("/images/flags/"+ match.away_team.country_flag+ ".png") %>
        </div><%= match.away_team.name %>
      </div>
    </div>
  <% else -%>
    <div class="knockout_stage_match">
      <div class="knockout_stage_team">Not Predicted</div>
      <div class="knockout_stage_team">Not Predicted</div>
    </div>
  <% end -%>
</div>

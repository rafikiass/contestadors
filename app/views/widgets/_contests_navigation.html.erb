  @contest_instances.each do |instance|
    add_item do |i|
      i.named instance.name
      i.titled "Click to view contest details"
      i.links_to contest_path(:contest => @contest.permalink, :id => instance.permalink, :uuid => instance.uuid)
      i.highlights_on(:action => "index") if @contest_instance and instance.eql?(@contest_instance)
      i.detailed_info instance.summary_for(current_user)
